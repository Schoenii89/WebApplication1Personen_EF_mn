@model IEnumerable<WebApplication1Personen_EF.Models.Personen>



@{ ViewBag.Title = "Index"; }



<h2>Index</h2>



<p>
    @Html.ActionLink("Create New", "Create")
</p>




@using (Html.BeginForm())
{
<p>
    Suchen nach <u><b>Nachname</b></u> Name: @Html.TextBox("SearchString")
    <input type="submit" value="Search" />



</p>}



<table class="table">
    <tr>
        <th>
            @Html.ActionLink("Vorname", "Index", new { sortOrder = ViewBag.PersonenSort })
        <th>
            @Html.ActionLink("Nachname", "Index", new { sortOrder = ViewBag.PersonenSort1 })
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Geburtstag)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmailAdr)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TelNummer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Geburtsjahr)
        </th>
        <th></th>
    </tr>



    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Vorname)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Nachname)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Geburtstag)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.EmailAdr)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TelNummer)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Geburtsjahr)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
    </td>
</tr>}



</table>
